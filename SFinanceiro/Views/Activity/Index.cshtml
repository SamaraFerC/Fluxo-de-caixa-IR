@model IEnumerable<FluxoCaixa.Application.ViewModel.ActivityViewModel>
@{
    ViewData["Title"] = "Atividades";
}
<script src="~/js/Activity/Index.js"></script>
<div>
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Adicionar nova atividade
    </a>
</p>
<div class="panel panel-default">
    <table class="table table-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th style="width: 280px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row-@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-primary btn-sm d-inline-flex align-items-center">
                                <i class="fas fa-pencil-alt me-1"></i><span>Editar</span>
                            </a>
                            <a asp-action="Visualize" asp-route-id="@item.Id" title="Detalhes" class="btn btn-info btn-sm d-inline-flex align-items-center">
                                <i class="fas fa-eye me-1"></i><span>Visualizar</span>
                            </a>
                            <button onclick="confirmDelete(@item.Id)" title="Excluir" class="btn btn-danger btn-sm d-inline-flex align-items-center">
                                <i class="fas fa-trash-alt me-1"></i><span>Excluir</span>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .btn-group {
        display: flex;
        gap: 5px;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        white-space: nowrap;
    }

    .table td {
        vertical-align: middle;
    }

    /* Garantir que os ícones e texto fiquem na mesma linha */
    .btn-group .btn {
        display: inline-flex !important;
        align-items: center !important;
    }

        .btn-group .btn i {
            margin-right: 4px;
        }
</style>